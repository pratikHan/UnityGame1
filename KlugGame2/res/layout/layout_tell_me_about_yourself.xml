<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planebackground1"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Your name"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />

           
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:gravity="center"
            >
            
            <EditText
                android:id="@+id/edittext1"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@drawable/textviewbackground"
                android:imeOptions="actionDone"
                android:inputType="textEmailSubject"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="#959595"
                android:textSize="20dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Your age"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/textOO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="00"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="220dp"
                android:layout_height="27dp"
                android:layout_marginRight="10dp"
                android:max="20"
              	android:minHeight="27dp"
              
                android:progressDrawable="@drawable/seekbg"
                android:thumb="@drawable/thumb1" 
                />
          

            <TextView
                android:id="@+id/textResultAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Years"
                android:textColor="#FFFFFF"
                android:textSize="25dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Your Gender"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />

            <RadioButton
                android:id="@+id/radioButtonMale"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/custon_design_radio_button"
                android:button="@null"
                android:checked="true"
                android:state_checked="true"
                android:state_pressed="false"
                android:text="" />

            <TextView
                android:id="@+id/textmale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              
                android:layout_marginRight="50dp"
                android:text="Male"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />

            <RadioButton
                android:id="@+id/radioButtonFemale"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/custon_design_radio_button"
                android:button="@null"
                android:checked="false"
                android:state_checked="false"
                android:state_pressed="false"
                android:text="" />

            <TextView
                android:id="@+id/textFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              
                android:text="Female"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp" >

        <Button
            android:id="@+id/btnSave"
            android:layout_width="170dp"
            android:layout_height="43dp"
            android:background="@drawable/custom_btnsave" />
    </RelativeLayout>

     <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
        
        <Button
        android:id="@+id/Buttonbck"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/custom_design_backbtn" />
        
        <ImageView android:layout_width="250dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/Buttonbck"
            android:background="@drawable/tellusaboutyoutselflabel"
            />
    </RelativeLayout>
    
      <RelativeLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/custom_btnguide" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/imageButton3"
            android:background="@drawable/custom_btnsettings" />
    </RelativeLayout>

</RelativeLayout>