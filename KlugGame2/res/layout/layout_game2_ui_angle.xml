<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game2screen2background" >

    <LinearLayout
        android:id="@+id/lineartop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@drawable/layer1"
            android:orientation="horizontal" >
        </LinearLayout>

       
    </LinearLayout>

    <RelativeLayout
        android:layout_width="212dp"
        android:layout_height="144dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/stepsx" >

        <TextView
            android:id="@+id/textsteps"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="34dp"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="5"
            android:textSize="25dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="212dp"
        android:layout_height="144dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/anglex" >

         <TextView
             android:id="@+id/textangle"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:layout_marginBottom="34dp"
             android:layout_marginRight="38dp"
             android:gravity="center"
             android:text="45"
             android:textSize="25dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true" >

        <ImageButton
            android:id="@+id/imgButtonfoul"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/foul2" />

        <ImageButton
            android:id="@+id/imgButtonguide"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/guide4" />

        <ImageButton
            android:id="@+id/imgButtonrotate"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rotate1" />

        <ImageButton
            android:id="@+id/imgButtonsteps"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/stepsbtn" />
    </RelativeLayout>

    
   <!-- relativecircle and relativedrag both layouts visibility should be changed -->
    <RelativeLayout
        android:id="@+id/relativecircle"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/anglewheeel" >
       
    </RelativeLayout>
        
       
<RelativeLayout
        android:id="@+id/relativecircledrag"
        android:layout_width="220dp"
        android:layout_height="220dp"
   android:layout_marginTop="65dp"
         android:gravity="center"
        android:layout_centerHorizontal="true"
       
      
         >
          

         <ImageView
             android:id="@+id/pointer"
             android:layout_width="88dp"
             android:layout_height="88dp"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:background="@drawable/pointer"
             android:padding="15dp" />
         </RelativeLayout>
     
   
    
     
    
    <RelativeLayout
        android:id="@+id/lineartop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
       
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/k"
            android:layout_width="68dp"
            android:layout_height="67dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="105dp"
            android:background="@drawable/k" />

        <ImageButton
            android:id="@+id/r"
            android:layout_width="68dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/k"
            android:background="@drawable/r" />
    </RelativeLayout>

</RelativeLayout>